<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cursos.multimedia.MainActivity"
    android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir imagen..."
        android:onClick="elegirImagen"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir audio..."
        android:onClick="elegirAudio"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir video..."
        android:onClick="elegirVideo"
        />
    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="center"
        android:layout_weight="0.61" />
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_gravity="center"
        />

</LinearLayout>
